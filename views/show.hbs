<div class="container bg-light">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="line">
        <h1 class="restaurant-show-title">
          {{restaurant.name}}
        </h1>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fab fa-cuttlefish pr-2"></i>
          中文名稱：
        </p>
        <p>
          {{restaurant.name}}
        </p>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fab fa-amilia pr-2"></i>
          英文名稱：
        </p>
        <p>
          {{restaurant.name_en}}
        </p>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </p>
        <p>
          {{restaurant.category}}
        </p>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </p>
        <p>
          {{restaurant.location}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </p>
        <p>
          {{restaurant.phone}}
        </p>
      </div>

      <div class="line d-flex justify-content-center">
        <p class="text-secondary">
          <i class="fas fa-info pr-2"></i>
          {{!-- <i class="fas fa-info-circle pr-2"></i> --}}
          餐廳簡介：
        </p>
        <p>
          {{restaurant.description}}
        </p>
      </div>

      <img class="rounded mx-auto d-block my-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>

  <div class='d-flex justify-content-center'>
    <a href="/restaurants/{{restaurant._id}}/edit"><button class='btn btn-success mb-5 mr-2'><i
          class="far fa-edit"></i></button></a>
    <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST">
      <button type="submit" class='btn btn-danger mb-5 mr-2 delete'><i class="far fa-trash-alt delete"></i></button>
    </form>
    <a href="/"><button class='btn btn-info mb-5 mr-2'><i class="fas fa-sign-out-alt"></i></button></a>
  </div>
</div>